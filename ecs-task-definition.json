{
  "family": "mycare-pricing-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mycare-pricing-app",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-2.amazonaws.com/mycare-pricing-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        }
      ],
      "secrets": [
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/stripe-secret-key"
        },
        {
          "name": "STRIPE_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/stripe-webhook-secret"
        },
        {
          "name": "MYCARE_METER_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/meter-id"
        },
        {
          "name": "MYCARE_PRICE_TRIAL",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:trial"
        },
        {
          "name": "MYCARE_PRICE_STARTER_BASE",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:starter_base"
        },
        {
          "name": "MYCARE_PRICE_STARTER_HOURLY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:starter_hourly"
        },
        {
          "name": "MYCARE_PRICE_PLUS_BASE",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:plus_base"
        },
        {
          "name": "MYCARE_PRICE_PLUS_HOURLY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:plus_hourly"
        },
        {
          "name": "MYCARE_PRICE_PRO_BASE",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:pro_base"
        },
        {
          "name": "MYCARE_PRICE_PRO_HOURLY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:mycare/prices:pro_hourly"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mycare-pricing-app",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3001/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
